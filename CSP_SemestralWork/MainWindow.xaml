<Window x:Class="CSP_SemestralWork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSP_SemestralWork"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="625">
    <Grid>
        <Menu Height="20" HorizontalAlignment="Stretch" VerticalAlignment="Top" >
            <MenuItem Header="File">
                <MenuItem Header="Import"></MenuItem>
                <MenuItem Header="Save"></MenuItem>
                <MenuItem Header="Exit"></MenuItem>
            </MenuItem>
        </Menu>
        <StackPanel Margin="20" HorizontalAlignment="Left" Width="280" Orientation="Vertical">
            <Label Content="Meeting centers"></Label>
            <ListBox Height="108"></ListBox>
        </StackPanel>
        <StackPanel Margin="20" HorizontalAlignment="right" Width="280" Orientation="Vertical">
            <Label Content="Meeting rooms"></Label>
            <ListBox Height="108"></ListBox>
        </StackPanel>
  
    </Grid>
</Window>
